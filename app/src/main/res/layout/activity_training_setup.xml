<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TrainingSetupActivity"
        android:background="@color/saitamaYellow">
    
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    
        <TextView
                android:id="@+id/tv_training_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training Setup"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    
        <TextView
                android:id="@+id/tv_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Series"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_training_settings"/>
    
        <com.warkiz.tickseekbar.TickSeekBar
                android:id="@+id/seekbar_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:tsb_min="2"
                app:tsb_max="5"
                app:tsb_ticks_count="3"
                app:tsb_tick_texts_array="@array/training_series"
                app:tsb_thumb_color="@color/saitamaRed"
                app:tsb_thumb_size="16dp"
                app:tsb_show_tick_marks_type="oval"
                app:tsb_tick_marks_color="@color/saitamaDarkRed"
                app:tsb_tick_marks_size="5dp"
                app:tsb_show_tick_texts="above"
                app:tsb_tick_texts_color="@android:color/black"
                app:tsb_tick_texts_size="14sp"
                app:tsb_track_background_color="@color/saitamaRed"
                app:tsb_track_background_size="2dp"
                app:tsb_track_progress_color="@color/saitamaRed"
                app:tsb_track_progress_size="3dp"
                app:layout_constraintTop_toBottomOf="@id/tv_series"
                android:layout_marginTop="16dp"/>
    
        <TextView
                android:id="@+id/tv_pushups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Push-ups"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/seekbar_series"/>
    
        <com.warkiz.tickseekbar.TickSeekBar
                android:id="@+id/seekbar_pushups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:tsb_ticks_count="10"
                app:tsb_min="5"
                app:tsb_max="50"
                app:tsb_thumb_color="@color/saitamaRed"
                app:tsb_thumb_size="16dp"
                app:tsb_show_tick_marks_type="oval"
                app:tsb_tick_marks_color="@color/saitamaDarkRed"
                app:tsb_tick_marks_size="5dp"
                app:tsb_show_tick_texts="above"
                app:tsb_tick_texts_color="@android:color/black"
                app:tsb_tick_texts_size="14sp"
                app:tsb_track_background_color="@color/saitamaRed"
                app:tsb_track_background_size="2dp"
                app:tsb_track_progress_color="@color/saitamaRed"
                app:tsb_track_progress_size="3dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pushups"
                android:layout_marginTop="16dp"/>
    
        <TextView
                android:id="@+id/tv_situps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Sit-ups"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/seekbar_pushups"/>
    
        <com.warkiz.tickseekbar.TickSeekBar
                android:id="@+id/seekbar_situps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:tsb_ticks_count="10"
                app:tsb_min="5"
                app:tsb_max="50"
                app:tsb_thumb_color="@color/saitamaRed"
                app:tsb_thumb_size="16dp"
                app:tsb_show_tick_marks_type="oval"
                app:tsb_tick_marks_color="@color/saitamaDarkRed"
                app:tsb_tick_marks_size="5dp"
                app:tsb_show_tick_texts="above"
                app:tsb_tick_texts_color="@android:color/black"
                app:tsb_tick_texts_size="14sp"
                app:tsb_track_background_color="@color/saitamaRed"
                app:tsb_track_background_size="2dp"
                app:tsb_track_progress_color="@color/saitamaRed"
                app:tsb_track_progress_size="3dp"
                app:layout_constraintTop_toBottomOf="@id/tv_situps"
                android:layout_marginTop="16dp"/>
    
        <TextView
                android:id="@+id/tv_squats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Squats"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/seekbar_situps"/>
    
        <com.warkiz.tickseekbar.TickSeekBar
                android:id="@+id/seekbar_squats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:tsb_ticks_count="10"
                app:tsb_min="5"
                app:tsb_max="50"
                app:tsb_thumb_color="@color/saitamaRed"
                app:tsb_thumb_size="16dp"
                app:tsb_show_tick_marks_type="oval"
                app:tsb_tick_marks_color="@color/saitamaDarkRed"
                app:tsb_tick_marks_size="5dp"
                app:tsb_show_tick_texts="above"
                app:tsb_tick_texts_color="@android:color/black"
                app:tsb_tick_texts_size="14sp"
                app:tsb_track_background_color="@color/saitamaRed"
                app:tsb_track_background_size="2dp"
                app:tsb_track_progress_color="@color/saitamaRed"
                app:tsb_track_progress_size="3dp"
                app:layout_constraintTop_toBottomOf="@id/tv_squats"
                android:layout_marginTop="16dp"/>
    
        <TextView
                android:id="@+id/tv_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="Running (km)"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="29dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/seekbar_squats"/>
    
        <com.warkiz.tickseekbar.TickSeekBar
                android:id="@+id/seekbar_run"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:tsb_ticks_count="10"
                app:tsb_min="1"
                app:tsb_max="10"
                app:tsb_thumb_color="@color/saitamaRed"
                app:tsb_thumb_size="16dp"
                app:tsb_show_tick_marks_type="oval"
                app:tsb_tick_marks_color="@color/saitamaDarkRed"
                app:tsb_tick_marks_size="5dp"
                app:tsb_show_tick_texts="above"
                app:tsb_tick_texts_color="@android:color/black"
                app:tsb_tick_texts_size="14sp"
                app:tsb_track_background_color="@color/saitamaRed"
                app:tsb_track_background_size="2dp"
                app:tsb_track_progress_color="@color/saitamaRed"
                app:tsb_track_progress_size="3dp"
                app:layout_constraintTop_toBottomOf="@id/tv_run"
                android:layout_marginTop="16dp"/>
    
        <Button
                android:id="@+id/btn_start"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_button"
                android:textColor="@android:color/white"
                android:text="start training"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seekbar_run"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>